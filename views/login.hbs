<div class="container">
  <div class="col-8 col-md-6 col-lg-5 mx-auto my-5">
    <div class="card card-body">
      <h1 class="text-center my-3">Login</h1>
      {{!-- {{> message}} --}}
      <form action="/users/login" method="post" class="row">
        <div class="col-10 mx-auto my-2">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="{{loginemail}}"
          />
        </div>
        <div class="col-10 mx-auto my-2">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary col-8 mx-auto my-3"
        >Login</button>
        <a href="/auth/facebook" class="btn btn-info col-8 mx-auto">Facebook
          Login</a>
      </form>
      <p class="mt-3 mx-auto col-10 font-monospace lead">
        No Account?
        <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>